.container {
  padding: 20rpx;
}

.form {
  width: 100%;
}

.cu-form-group {
  background-color: #ffffff;
  padding: 1rpx 30rpx;
  display: flex;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.cu-form-group .title {
  text-align: justify;
  padding-right: 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
}

.cu-form-group input {
  flex: 1;
  font-size: 30rpx;
  color: #555;
  padding-right: 20rpx;
}

.cu-form-group .picker {
  flex: 1;
  padding-right: 40rpx;
  overflow: hidden;
  position: relative;
  font-size: 30rpx;
  color: #555;
}

.upload-img {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 20rpx;
}

.upload-img image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-btn {
  width: 100%;
  height: 100%;
  border: 1px dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn text {
  font-size: 60rpx;
  color: #888;
}

.btn-submit {
  padding: 40rpx;
}

.btn-submit button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}